@import './_reset-styles.styl'
@import './_tokens.styl'

:root
	--main-background hsl(222, 26%, 31%)
	--keypad-background hsl(223, 31%, 20%)
	--screen-background hsl(224, 36%, 15%)
	--key-background hsl(30, 25%, 89%)
	--key-shadow hsl(28, 16%, 65%)
	--secondary-key-background hsl(225, 21%, 49%)
	--secondary-key-shadow hsl(224, 28%, 35%)
	--accent-key-background hsl(6, 63%, 50%)
	--accent-key-shadow hsl(6, 70%, 34%)
	--text-color hsl(30, 25%, 89%)
	--key-text-color hsl(221, 14%, 31%)
	--secondary-key-text-color hsl(30, 25%, 89%)
	--accent-key-text-color hsl(30, 25%, 89%)
	--theme-button-position flex-start

html
	background-color mainBackground
	font-family ffPrimary

main
	max-width 400px
	margin 0 auto

.header
	color textColor
	display flex
	justify-content space-between
	align-items center
	height 100px
	&__title
		font-size 3.5rem
	&__theme-switcher
		display flex
		justify-content flex-end
		&__title
			margin-right 10px
			margin-top 22px
		&__button
			width 75px
			&__numbers
				display flex
				justify-content space-evenly
				&__item
					margin 0
					font-size 1.4rem
			&__container
				height 30px
				width 100%
				background-color keypadBackground
				border-radius 15px
				display flex
				padding 0 5px
				justify-content var(--theme-button-position)
				align-items center
				&__inner-circle
					height 24px
					width 24px
					margin-top 1px
					background-color accentKeyBackground
					border-radius 50%

.screen
	margin 0
	height 80px
	background-color screenBackground
	border-radius 15px
	display flex
	justify-content flex-end
	align-items center
	padding-right 20px
	font-size 3.5rem
	color textColor

.keypad
	display grid
	margin-top 20px
	border-radius 15px
	background-color keypadBackground
	grid-template-columns repeat(4, 25%)
	padding 20px
	&__button
		margin 7px
		height 60px
		background-color keyBackground
		border none
		font-size 3.3rem
		padding-top 10px
		font-family ffPrimary
		box-shadow 0px 5px 1px 0px keyShadow
		&.secondary
			background-color secondaryKeyBackground
			box-shadow 0px 5px 1px 0px secondaryKeyShadow
			color secondaryKeyTextColor
			text-transform uppercase
			font-size 2rem
			&.reset
				grid-column 1 / 3
		&.accent
			background-color accentKeyBackground
			box-shadow 0px 5px 1px 0px accentKeyShadow
			color accentKeyTextColor
			grid-column 3/5
			font-size 2rem
